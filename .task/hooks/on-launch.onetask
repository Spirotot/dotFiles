#!/usr/bin/env python

import sys, subprocess

for arg in sys.argv:
    if 'command:' in arg:
        command = arg.split(':')[1]
        if command == 'start':
            p = subprocess.Popen(
                    ['task', '+ACTIVE', 'status:pending', 'stop', 'rc.verbose=off'],
                    stdout=subprocess.PIPE)
            out, err = p.communicate()
